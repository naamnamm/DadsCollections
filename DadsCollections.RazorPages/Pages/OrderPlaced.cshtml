<div class="card mt-50 mb-50">
    <div class="col d-flex"><span class="text-muted" > Order# @Model.Id</span></div>
    <div class="gap">
        <div class="col-2 d-flex mx-auto"> </div>
    </div>
    <div class="title mx-auto"> Thank you for your order, @Model.CustomerName! </div>
    <div class="main"> 
        <span id="sub-title">
            <p><b>Order Summary</b></p>
        </span>

        @foreach (var product in Model.Order)
        {
        <div class="row row-main">
            <div class="col-3"> <img class="img-fluid" src="~/images/@product.ImgName"> </div>
            <div class="col-6">
                <div class="row d-flex">
                    <p><b>@product.ProductTitle</b></p>
                </div>
                <div class="row d-flex">
                    <p class="text-muted">@product.ProductDescription</p>
                </div>
            </div>
            <div class="col-3 d-flex justify-content-end">
                <p><b>$@product.Price</b></p>
            </div>
        </div>         
        }
        
