    <form method="post">
        <input asp-for="cart" value="@product.Id" type="hidden" /> 
        <input type="submit" asp-page-handler="PlaceOrder" value="Place Order" class="btn btn-primary" />  
    </form>

    <p> @HttpContext.Session.Id</p>


</body>
</html>